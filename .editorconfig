root = true

[*.*]
indent_size = 2
indent_style = space
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = false
insert_final_newline = true

[Makefile]
indent_style = tab

[*.py]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = false
insert_final_newline = true

[*.ipynb]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = false
insert_final_newline = false

[*.sh]
indent_size = 2

[*.toml]
indent_size = 2

[*.json]
indent_size = 2

[*.md]
trim_trailing_whitespace = false
indent_size = 4

[*.ya?ml]
indent_size = 2

[*.ya?ml.j2]
indent_size = 2

[*.j2]
indent_size = 2

[*.cfg]
indent_size = 4
